<div class="container">
	<h2>Your reservations</h2>
	<table>
		<% @reservations.each do |r| %>
			<tr>
				<th>Listing </th>
				<td>: <%= r.listing.title %></td>
			</tr>
			<tr>
				<th>Check In Date </th>
				<td>: <%= r.check_in_date %></td>
			</tr>
			<tr>
				<th>Check Out Date </th>
				<td>: <%= r.check_out_date %></td>
			</tr>
			<tr>
				<th>Pax </th>
				<td>: <%= r.pax %></td>
			</tr>
			<tr>
				<th>Price </th>
				<td>: <%= r.price %></td>
			</tr>
			<tr>
				<th>Payment</th>
				<td>: <%= r.payment ? 'Done' : 'Pending' %></td>
			</tr>
			<tr>
				<td><%= link_to 'Show', user_reservation_path(current_user, r) %>
				<% unless r.payment %>
				| <%= link_to 'Edit', edit_user_reservation_path(current_user, r) %>
				| <%= link_to 'Destroy', user_reservation_path(current_user, r), method: :delete,
				data: { confirm: 'Are you sure?' } %></td>
				<% end %>
			</tr>
		<% end %>
	</table>
</div>