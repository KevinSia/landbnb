<h2 class='text-center'><%= @listing.title || 'No title given' %></h2>
<div class="container text-center well well-lg">
	<div class='col-md-10 col-md-offset-1 text-left'>
		<table>
			<tr>
				<th> Country </th>
				<td>: <%= @listing.country %></td>
			</tr>
			<tr>
				<th> State </th>
				<td>: <%= @listing.state %></td>
			</tr>
			<tr>
				<th> City </th>
				<td>: <%= @listing.city %></td>
			</tr>
			<tr>
				<th> Address </th>
				<td>: <%= @listing.address %></td>
			</tr>
			<tr>
				<th> Home type </th>
				<td>: <%= @listing.home_type %></td>
			</tr>
			<tr>
				<th> Room type </th>
				<td>: <%= @listing.room_type %></td>
			</tr>
			<tr>
				<th> Allowed guest number </th>
				<td>: <%= @listing.guest_number %> pax</td>
			</tr>
			<tr>
				<th> Price per night </th>
				<td>: RM<%= @listing.price_per_night %></td>
			</tr>
			<tr>
				<th> Tags </th>
				<td>: <%= @listing.tags_list %>z</td>
			</tr>
			<tr>
				<th> Description </th>
				<td>: <%= @listing.description %></td>
			</tr>
			<tr>
				<th> Images </th><br>
			</tr>
			<tr>
				<td>
				<% if images = @listing.images %>
					<% @listing.images.each do |image| %>
						<%= image_tag(image.normal.url) %>
					<% end %>
				</td>
				<% else %>
					<td>U haz no img :(</td>
				<% end %>
			</tr>
		</table>
		<%= link_to 'Edit this listing', edit_user_listing_path(current_user, @listing), class: 'btn btn-default' %>
	</div>
</div>